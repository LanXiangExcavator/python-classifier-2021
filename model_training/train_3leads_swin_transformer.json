{
  "n_gpu": 1,
  "base_dir": "model_training",
  "lead_number": 3,
  "arch": {
    "type": "swin_transformer",
    "args": {
      "depths": [
        2,
        6,
        2,
        2
      ],
      "num_heads": [
        3,
        6,
        12,
        24
      ],
      "in_chans": 3,
      "embed_dim": 96,
      "patch_size":4,
      "window_size": 7
    }
  },
  "data_loader": {
    "batch_size": 128,
    "resample_Fs": 300,
    "window_size":3584,
    "normalization": false,
    "augmentation": {
    "method": null,
    "prob": 0.8
  }
  },

  "optimizer": {
    "type": "AdamW",
    "args": {
      "lr": 0.0001
    }
  },
  "loss": {
    "type": "bce_with_logits_loss"
  },
  "metrics": [
    "accuracy",
    "f_measure",
    "macro_f_beta_measure",
    "macro_g_beta_measure",
    "macro_auroc",
    "macro_auprc",
    "challenge_metric"
  ],
  "lr_scheduler": {
    "type": "StepLR",
    "args": {
      "step_size": 20,
      "gamma": 0.1
    }
  },
  "trainer": {
    "epochs": 1000,
    "monitor": "max val_challenge_metric",
    "early_stop": 10,
    "only_scored": true
  }
}
