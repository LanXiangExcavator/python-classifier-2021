{
    "name": "se_resnet_lr0.001_warmup_asl_onlyfilter_6leads",
    "n_gpu": 1,
    "arch": {
        "type": "se_resnet",
        "args": {
            "num_classes": 26,
            "layers": [3,4,4,3],
            "channel_num": 6
        }
    },
    "data_loader": {
        "type": "ChallengeDataLoader",
        "args": {
            "label_dir": "/data/ecg/raw_data/challenge2020/all_data_2021",
            "dir2save_data": "/data/ecg/challenge2021/data/",
            "split_index": "process/data_split/split_2021_offline.mat",
            "batch_size": 128,
            "shuffle": true,
            "num_workers": 0,
            "resample_Fs":250,
            "window_size":2500,
            "lead_number": 6,
            "save_data": false,
            "n_segment":1,
            "load_saved_data": false
        }
    },
    "optimizer": {
        "type": "AdamW",
        "args": {
            "lr": 0.0001
        }
    },
    "loss": {
        "type": "AsymmetricLossOptimized",
        "args": {}
    },
    "lr_scheduler": {
        "type": "warmup_cosine_lr",
        "args": {
            "max_epoch": 25,
            "min_lr": 0,
            "warm_epoch": 3,
            "warm_multiplier": 10
        }
    },
    "trainer": {
        "epochs": 25,
        "save_dir": "/data/ecg/challenge2021/saved/",
        "save_period": 1,
        "verbosity": 2,
        "monitor": "max val_challenge_metric",
        "early_stop": 4,
        "tensorboard": true
    },
    "evaluater": {
        "result_dir": "/data/ecg/challenge2021/saved/",
        "verbosity": 2,
        "visualization": {
            "scatter": true
        },
        "n_segment": 1,
        "test_time_aug": true
    },
    "metrics": [
        "accuracy",
        "f_measure",
        "macro_f_beta_measure",
        "macro_g_beta_measure",
        "macro_auroc",
        "macro_auprc",
        "challenge_metric"
    ]
}